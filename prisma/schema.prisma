generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum ListingStatus {
  DRAFT
  ACTIVE
  CLOSED
  CANCELLED
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  emailVerified Boolean     @default(false)
  name          String?
  image         String?
  displayName   String?
  avatarUrl     String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  sessions      Session[]
  accounts      Account[]
  bids          Bid[]
  listings      Listing[]
  watchlist     Watchlist[]
  notifications Notification[]
  aiLogs        AiGenerationLog[]

  @@index([createdAt])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@index([expiresAt])
}

model Listing {
  id          String        @id @default(cuid())
  sellerId    String
  title       String
  description String
  category    String?
  startingBid Int
  currentBid  Int
  endAt       DateTime
  status      ListingStatus @default(DRAFT)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  seller      User          @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  photos      ListingPhoto[]
  bids        Bid[]
  watchlist   Watchlist[]
  result      AuctionResult?

  @@index([sellerId])
  @@index([status, endAt])
}

model ListingPhoto {
  id        String   @id @default(cuid())
  listingId String
  url       String
  order     Int
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@index([listingId])
  @@unique([listingId, order])
}

model Bid {
  id        String   @id @default(cuid())
  listingId String
  bidderId  String
  amount    Int
  createdAt DateTime @default(now())
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  bidder    User     @relation(fields: [bidderId], references: [id], onDelete: Cascade)

  @@index([listingId, createdAt])
  @@index([bidderId])
}

model Watchlist {
  id        String   @id @default(cuid())
  userId    String
  listingId String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@unique([userId, listingId])
  @@index([listingId])
}

model AuctionResult {
  id         String   @id @default(cuid())
  listingId  String   @unique
  winnerId   String?
  finalPrice Int?
  closedAt   DateTime
  reason     String
  listing    Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@index([closedAt])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  payload   Json
  readAt    DateTime?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([readAt])
}

model AiGenerationLog {
  id        String   @id @default(cuid())
  userId    String?
  feature   String
  input     Json
  output    Json
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([feature])
}
